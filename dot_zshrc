HISTFILE=~/.config/zsh/.histfile
HISTSIZE=5000
SAVEHIST=100000
setopt autocd extendedglob
unsetopt beep
bindkey -v
alias ls="lsd"
alias ll="ls -l"
alias la="ls -lAtr"
alias cat="bat"
export PATH="$PATH:$HOME/go/bin"
eval "$(starship init zsh)"

